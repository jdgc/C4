          <!-- <img src="../assets/xbox.png" alt="" class="img-responsive"> -->
          <%= image_tag "xbox.png", class: "img-responsive" %>
        </a>
      </div>
      <div class="col-sm-4">
        <a href="#" class="console-link">
          <h3 class="text-center text-lowercase font-weight-light font-body">N64</h3>
          <img src="../assets/n64.png" alt="" class="img-responsive">
