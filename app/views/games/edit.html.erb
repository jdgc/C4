<div class="create-listing-wpr wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 section-margin-btm"><h1 class="header-text header-main">update listing</h1></div>
      <%= simple_form_for(@game) do |f| %>
        <div class="container-content">
          <div class="col-sm-5">
            <div class="text-input">
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.input :console, collection: Game::CONSOLES %>
              <%= f.input :location, label: 'Game pickup address' %>
            </div>
          </div>
           <div class="col-xs-12 col-sm-6">
            <div class="photo-input">
              <%= f.input :photo, as: :attachinary, class: "btn btn-warning" %>
            </div>
          </div>
        </div>
        <div class="col-sm-12">
          <%= f.submit "update listing", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


