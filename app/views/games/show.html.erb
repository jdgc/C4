
<div class="container">
  <div class="row">
    <div class="col-sm-12 heading-wpr">
      <h1 class="main-heading no-whitespace"><%= @game.name %></h1>
      <h2 class="no-whitespace"><%= @game.console %></h2>
    </div>
    <div class="col-sm-4">
      <% if @game.photo.blank? %>
        <p>no image here.
          <% if current_user == @game.owner %>
            <%= link_to "Add one!", edit_game_path(@game)  %></p>
          <% else %>
            </p>
          <% end %>
      <% else %>
        <%= cl_image_tag @game.photo.path, class: "img-responsive" %>
      <% end %>
    </div>
    <div class="col-sm-4">
      <p><%= @game.description %></p>
    </div>
    <div class="col-sm-4">
       <p>Game owner: <%= link_to "#{@game.owner.email}", user_path(@game.owner) %></p>
      <p><b>Pickup Location</b><br/><%= @game.location %></p>

      <% @game.rentals.each do |rental| %>
      <% rental.destroy if Date.today > rental.end_date %>
      <% end %>

      <% rental = Rental.where(game_id: @game.id) %>
      <% case @status %>
        <% when "edit"  %>
       <%= link_to "edit your listing", edit_game_path(@game), :class => "btn btn-primary" %>
        <% when "unavailable" %>
        <p>This game is currently on loan and will be available for rental after <%= rental[0].end_date.to_date %></p>
        <% when "future_rental" %>
         <p>This game is unavailable from <%= rental[0].start_date.to_date %> to <%= rental[0].end_date.to_date %> </p>
         <%= render 'form' %>
        <% when "available" %>
        <% @game.update(available?: true) %>
        <% @game.save %>
        <%= render 'form' %>
        <% end %>
    </div>
  </div>
</div>



