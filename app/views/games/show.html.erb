<% else %>
  <%= cl_image_tag @game.photo.path %>
<% end %>
<h3><%= @game.console %></h3>
<p><%= @game.description %></p>
<p>##################</p>
<p>Game owner: <%= link_to "#{@game.owner.email}", "#" %> (user profile page not implemented-- 2:17pm)</p>
