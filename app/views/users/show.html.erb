<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/100x100" %>
      <%= image_tag avatar_url %>
    </div>
    <div class="col-sm-8">
      <h1>listings:</h1>
      <% if !@games.blank? %>
        <div class="game-listing">
          <% for game in @games %>
            <%= cl_image_path game.photo.nil? ? 'http://placehold.it/50x50' : game.photo.path, height:50, width: 50 %>
            <div class="message-name">
              <%= link_to "#{game.name}", game_path(game) %>
            </div>

          <% end %>
            <% else %>
              <p>No games!</p>
            <% end %>
        <div class="message-body">
          <p><strong>I am not sure yet!</strong></p>
          <p>
            I am not sure yet! I might be in Shanghai at this moment... Can I tell you later?
          </p>
        </div>
        <div class="message-status">
          <p class="status pending">Pending</p>
          <p class="price">â‚¬345</p>
        </div>
      </div>
    </div>
  </div>
</div>

